@model SchoolSystem.Web.Models.Student.StudentViewModel

@{
    ViewData["Title"] = "Delete Student";
}

<h3>Are you sure you want to delete this student?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.Dob</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ClassId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Students" asp-controller="Class" asp-route-id="@Model.ClassId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
