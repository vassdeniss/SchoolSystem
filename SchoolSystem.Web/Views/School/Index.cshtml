@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SchoolSystem.Web.Models.School
@model IEnumerable<SchoolViewModel>

@{
    ViewData["Title"] = "Избор на училище";
}

<main class="select-school-page">
    <div class="select-card">
        <h1>Изберете училище</h1>
        <form method="get" asp-controller="School" asp-action="Details">
            <label for="schoolSelect">Училище</label>
            <select id="schoolSelect" name="id" required>
                <option value="">-- Изберете --</option>
                @foreach (SchoolViewModel school in Model)
                {
                    <option value="@school.Id">@school.Name</option>
                }
            </select>
            <button type="submit" class="mb-3">Влез</button>
            <a asp-action="Create">Създай училище</a>
        </form>
    </div>
</main>

@section Styles
{
    <link rel="stylesheet" href="~/css/select-school.css" />
}
