@model SchoolSystem.Web.Models.Teacher.TeacherViewModel

@{
    ViewData["Title"] = "Delete Teacher";
}

<h3>Are you sure you want to delete this teacher?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Specialization</dt>
        <dd class="col-sm-10">@Model.Specialization</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="schoolId" value="@ViewBag.SchoolId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Details" asp-controller="School" asp-route-id="@ViewBag.SchoolId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
