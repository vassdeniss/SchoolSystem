@model PrincipalEditViewModel

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Principal Name</label>
        <input class="form-control" value="@Model.FullName" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Specialization"></label>
        <input asp-for="Specialization" class="form-control" />
        <span asp-validation-for="Specialization"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
