@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SchoolSystem.Common.PrincipalDto

<h3>Are you sure you want to delete this principal?</h3>
<div>
    <dl>
        <dt>Name</dt>
        <dd>@Model.UserFullName</dd>
        <dt>School</dt>
        <dd>@Model.SchoolName</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Cancel</a>
    </form>
</div>
