@model SchoolSystem.Web.Models.Class.ClassEditViewModel

@{
    ViewData["Title"] = "Edit Class";
}

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="SchoolId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" type="number" min="2000" max="2100" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Term</label><br />
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-outline-primary">
                <input type="radio" name="Term" value="Fall" autocomplete="off"
                       @(Model.Term == "Fall" ? "checked" : "") /> Fall
            </label>
            <label class="btn btn-outline-primary">
                <input type="radio" name="Term" value="Spring" autocomplete="off"
                       @(Model.Term == "Spring" ? "checked" : "") /> Spring
            </label>
        </div>
        <span asp-validation-for="Term" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning">Edit</button>
</form>
