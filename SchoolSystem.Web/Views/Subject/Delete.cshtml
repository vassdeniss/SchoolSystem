@model SchoolSystem.Web.Models.Subject.SubjectViewModel

@{
    ViewData["Title"] = "Delete Subject";
}

<h3>Are you sure you want to delete this subject?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="SchoolId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Details" asp-controller="School" asp-route-id="@Model.SchoolId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
